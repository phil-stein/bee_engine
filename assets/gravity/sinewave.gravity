
extern var Entity;
extern var Game;

func init()
{
	System.print("called init");
	var this = Entity();

	// move it up a bit otherwise the sinewave makes it clip through the floor
	this.move_y(1.0);
}

// func update(delta)

func update()
{
 	var delta = _args[0];
	var this = Entity();
	var game = Game();

	// System.print(this.get_y());
	var dist = Math.sin(game.get_total_secs() * 6);
	this.move_y(dist * delta * 2.0);
}

func cleanup()
{
	System.print("called cleanup");
}


